<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="#FFFFFF" >

        <ImageView
            android:id="@+id/report_item_photo"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="5dp"
            android:scaleType="fitXY"
          />

        <ImageView
            android:id="@+id/report_item_zoom_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/im_inspectionwithdata_bg_icon_search" />
     
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/im_inspectionwithdata_icon_search" />

        <ImageView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/report_item_photo"
            android:layout_alignRight="@id/report_item_photo"
            android:layout_marginRight="10dp"
            android:background="@drawable/im_inspectionwithdata_bg_comment_white" />

        <TextView
            android:id="@+id/report_item_photo_comment_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/report_item_photo"
            android:layout_alignRight="@id/report_item_photo"
            android:layout_marginRight="40dp"
            android:paddingBottom="2dp"
            android:text="2"
            android:textColor="#FFFFFF"
            android:textSize="12sp" >
        </TextView>
        <ImageView
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/report_item_photo"
            android:layout_alignRight="@id/report_item_photo"
            android:layout_marginRight="20dp"
            android:background="@drawable/im_inspectionwithdata_icon_comment_white" />     
    </RelativeLayout>

</FrameLayout>