<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/property_cell_bg"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".home.DetectorInspector_History" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/seperator_list" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="8dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/large_ladder"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:gravity="top"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/status_text_size" />
        <TextView
            android:id="@+id/inspection_note"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/status_text_size" />

        <TextView
            android:id="@+id/inspection_key_time"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:gravity="top"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/status_text_size" />
    </LinearLayout>

</LinearLayout>